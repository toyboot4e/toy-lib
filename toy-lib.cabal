    linear-base ^>=0.5.0,
    list-t ^>=1.0.5.7,
    massiv ^>=1.0.5.0,
    megaparsec ^>=9.7.0,
    monad-memo ^>=0.5.4,
    mono-traversable ^>=1.0.21.0,
    mtl ^>=2.3.1,
