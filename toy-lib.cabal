    random ^>=1.3.1,
    reflection ^>=2.1.9,
    regex-tdfa ^>=1.3.2.4,
    safe-exceptions ^>=0.1.7.4,
    scientific ^>=0.3.8.0,
    semialign ^>=1.3.1,
    semigroupoids ^>=6.0.1,
    split ^>=0.2.5,
    stm ^>=2.5.3.1,
    strict ^>=0.5.1,
