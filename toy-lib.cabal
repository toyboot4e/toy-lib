    witherable ^>=0.5,
    xhtml ^>=3000.2.2.1,

  if flag(atcoder)
    cpp-options: -DATCODER

  if flag(debug)
    cpp-options: -DDEBUG

common exts2021
  default-extensions:
    BangPatterns
    BinaryLiterals
    ConstrainedClassMethods
    ConstraintKinds
    DeriveDataTypeable
    DeriveFoldable
    DeriveFunctor
    DeriveGeneric
    DeriveLift
    DeriveTraversable
    DoAndIfThenElse
    EmptyCase
    EmptyDataDecls
    EmptyDataDeriving
    ExistentialQuantification
    ExplicitForAll
    FieldSelectors
    FlexibleContexts
    FlexibleInstances
    ForeignFunctionInterface
    GADTSyntax
    GeneralisedNewtypeDeriving
    HexFloatLiterals
    ImplicitPrelude
    InstanceSigs
    KindSignatures
    MonomorphismRestriction
    MultiParamTypeClasses
    NamedFieldPuns
    NamedWildCards
    NoImportQualifiedPost
    NumericUnderscores
    PatternGuards
    PolyKinds
    PostfixOperators
    RankNTypes
    RelaxedPolyRec
    ScopedTypeVariables
    StandaloneDeriving
    StandaloneKindSignatures
    StarIsType
    TraditionalRecordSyntax
    TupleSections
    TypeApplications
    TypeOperators
    TypeSynonymInstances

source-repository head
  type: git
  location: https://github.com/toyboot4e/toy-lib

library
  import: deps, exts2021
  default-language: Haskell2010
  -- updated with `cabal-fmt -i toy-lib.cabal`:
  -- cabal-gild: discover src
  exposed-modules:
    Algorithm.Bisect
    Algorithm.SlideMin
    Algorithm.TwoPointers
    Data.ByteString.SuffixArray
    Data.Core.Group
    Data.Core.SemigroupAction
    Data.Core.Semiring
    Data.Core.Unindex
    Data.Graph.Alias
    Data.Graph.Generic
    Data.Instances.A2
    Data.Instances.A3
    Data.Instances.Affine1
    Data.MultiSet
    Data.MultiSet2
    Data.MultiSetVec
    Data.SafeList
    Data.SegmentTree.Beats
    Data.SegmentTree.Beats.SumMinMax
    Data.SegmentTree.Util
    Data.Slide
    Data.Trie
    Data.UnionFind.Sparse
    Data.Vector.CSum
    Data.Vector.Extra
    Data.Vector.InvNum
    Data.Vector.IxVector
    Heuristic.Randoms
    Math.BitSet
    Math.Digits
    Math.DigitsVector
    Math.Divisors
    Math.Exgcd
    Math.Manhattan
    Math.PowMod
    ToyLib.Compat
    ToyLib.Contest.Grid
    ToyLib.Contest.Prelude
    ToyLib.DP
    ToyLib.Debug
    ToyLib.Debug.Grid
    ToyLib.Macro
    ToyLib.Parser
    ToyLib.Parser.Grid
    ToyLib.Prelude
    ToyLib.ShowBSB
    ToyLib.ShowBSB.Grid

  hs-source-dirs: src
  ghc-options:
    -Wall
    -Wcompat
    -Widentities
    -Wincomplete-record-updates
    -Wincomplete-uni-patterns
    -Wmissing-export-lists
    -Wmissing-home-modules
    -Wpartial-fields
    -Wredundant-constraints
    -Wno-missing-export-lists

executable toy-lib-exe
  import: deps
  default-language: GHC2021
  main-is: Main.hs
  hs-source-dirs: app
  other-modules:
    Lib
    Lib.Parse
    Lib.Write

  build-depends:
    haskell-src-exts,
    temporary,
    toy-lib,

  ghc-options: -Wall

test-suite toy-lib-test
  -- import:           deps
  default-language: GHC2021
  type: exitcode-stdio-1.0
  main-is: Main.hs
  hs-source-dirs: tests
  -- cabal-gild: discover tests --exclude=tests/Main.hs
  other-modules:
    Tests.Bisect
    Tests.PowMod
    Tests.Slide
    Tests.SlideMin
    Tests.SumMinMax
    Tests.Util

  build-depends:
    QuickCheck,
    ac-library-hs,
    base,
    bitvec,
    bytestring,
    containers,
    extra,
    primitive,
    tasty,
    tasty-hspec,
    tasty-hunit,
    tasty-quickcheck,
    toy-lib,
    transformers,
    utility-ht,
    vector,
    vector-algorithms,

  -- , toy-lib
  ghc-options: -Wall
